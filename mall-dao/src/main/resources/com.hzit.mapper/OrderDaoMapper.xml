<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzit.dao.OrderDao">
    <insert id="insert" parameterType="Order">
        INSERT INTO Order VALUES(#{OrderId},#{UserId},#{Date},#{Price})
    </insert>
    <update id="update" parameterType="Order">
        UPDATE Order SET OrderId=#{OrderId},UserId=#{UserId},Date=#{Date},Price=#{Price}}
    </update>
    <select id="delete"  parameterType="int" >
        SELECT * FROM Order WHERE OrderId=#{OrderId}
    </select>
    <select id="selectall"  resultType="Order">
        SELECT * FROM Order
    </select>
    <select id="selectbyid" parameterType="int" resultType="Order">
        SELECT * FROM Order WHERE OrderId=#{OrderId}
    </select>

    <select id="OrdergoodMap"  resultMap="OrdergoodMap">
        select Order.*,Gamegood.gamegoodname,Gamegood.gameId,gamegoodorder.OrderId,Gamegoodorder.GameGoodid from Order,Gamegood,gamegoodorder where gamegoodorder.OrderId=Order.OrderId AND gamegoodorder.GameGoodid=gamegood.GameGoodid
    </select>

    <resultMap type="Order" id="OrdergoodMap">
        <id property="OrderId" column="OrderId"/>
        <result property="UserId" column="UserId"/>
        <result property="Date" column="Date"/>
        <result property="Price" column="Price"/>
        <association property="Gamegoodorder" javaType="Gamegoodorder">
            <id property="OrderId" column="OrdertId"/>
            <result property="GameGoodid" column="GameGoodid"/>
        </association>
        <collection property="GamegoodInfo" javaType="com.hzit.entity.GamegoodInfo">
            <id property="GameGoodid" column="GameGoodid"/>
            <result property="GameGoodname" column="GameGoodname"/>
            <result property="gameid" column="gameid"/>
        </collection>
    </resultMap>

</mapper>