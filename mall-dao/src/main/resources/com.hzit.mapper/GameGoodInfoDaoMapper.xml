<?xml version="1.0" encoding="UTF-8" ?>
<!--mapper标签用于指定配置文件所属的接口名，通过namespace来指定  -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzit.dao.GameGoodInfoDao">
    <!--select标签用于指定查询方法，
                               其中id属性代表方法名 ，
             parameterType代表方法参数指定类型，
             resultType代表方法返回集合中元素的类型
    -->

    <select id="FindAllGood"  resultType="GameGoodInfo">
        select * from gamegood
    </select>
    <select id="FindOneGood" parameterType="String" resultType="GameGoodInfo">
        select * from userinfo where gamegoodid=#{gamegoodid}
    </select>
    <insert id="InsertGood" parameterType="GameGoodInfo">
        insert into gamegood(gamegoodname,gameid,gameserverid,rolename,gamesellcount,gamegoodcount,describe,unitprice)
        values(#{gamegoodname},#{gameid},#{gameserverid},#{rolename},#{gamesellcount},#{gamegoodcount},#{describe},#{unitprice})
    </insert>
    <update id="updateGood" parameterType="GameGoodInfo">
        update gamegoodinfo set gamesellcount=#{gamesellcount},gamegoodcount=#{gamegoodcount},unitprice=#{unitprice}
        where gamegoodid=#{gamegoodid}
    </update>
    <delete id="deleteGood" parameterType="java.lang.Integer">
        delete from gamegoodinfo where gamegoodid = #{gamegoodid}
    </delete>

</mapper>