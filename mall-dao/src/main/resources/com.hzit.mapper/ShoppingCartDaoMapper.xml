<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzit.dao.ShoppingCartDao">
    <!-- 配置映射字段 -->
    <select id="findAllRole" parameterType="String" resultType="ShoppingCart">
        select * from ShoppingCart WHERE userId=#{userId}
    </select>
    <insert id="insertshoppingcart" parameterType="ShoppingCart" >
        INSERT INTO ShoppingCart VALUES (#{shopId},#{userId},#{price},#{gameGoodId},#{count})
    </insert>
    <delete id="deleteRole" parameterType="java.lang.Integer" >
        DELETE from ShoppingCart WHERE gameGoodId=#{gameGoodId}
    </delete>
</mapper>
