<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzit.dao.UserinfoDao">
    <insert id="insertUser" parameterType="UserInfo">
        INSERT INTO userinfo VALUES(#{UserId},#{LoginName},#{LoginPwd},#{PwdQuestion},#{PwdAnswer},#{UserSex},#{UserName},#{Tel},#{Address},#{IdCard},#{StoreName},#{UserEmail},#{RoleId},#{UserStateId})
    </insert>
    <update id="updateUser" parameterType="UserInfo">
        UPDATE userinfo SET LoginPwd=#{LoginPwd},PwdQuestion=#{PwdQuestion},PwdAnswer=#{PwdAnswer},Tel=#{Tel},Address=#{Address},UserEmail=#{UserEmail}
    </update>
    <select id="checkLogin"  parameterType="UserInfo" resultType="UserInfo">
        SELECT * FROM userinfo WHERE LoginName=#{LoginName} AND LoginPwd=#{LoginPwd}
    </select>
</mapper>